  "flows": [
    {
      "flowName": "LoginFlow",
      "description": "Login to the application",
      "steps": [
        {
          "stepName": "handlePermissions",
          "enabled": true,
          "description": "Handle app permissions",
          "actionSteps": [
            {
              "actionType": "wait",
              "params": {
                "milliseconds": 3000
              },
              "description": "Wait for permission dialogs"
            }
          ]
        },
        {
          "stepName": "performLogin",
          "enabled": true,
          "description": "Login with credentials",
          "actionSteps": [
            {
              "actionType": "waitForVisible",
              "locatorCategory": "login",
              "locatorName": "userId",
              "params": {
                "milliseconds": 15000
              }
            },
            {
              "actionType": "click",
              "locatorCategory": "login",
              "locatorName": "userId"
            },
            {
              "actionType": "sendKeys",
              "locatorCategory": "login",
              "locatorName": "userId",
              "value": "${testData.username}"
            },
            {
              "actionType": "click",
              "locatorCategory": "login",
              "locatorName": "password"
            },
            {
              "actionType": "sendKeys",
              "locatorCategory": "login",
              "locatorName": "password",
              "value": "${testData.password}"
            },
            {
              "actionType": "hideKeyboard",
              "optional": true
            },
            {
              "actionType": "click",
              "locatorCategory": "login",
              "locatorName": "signInButton"
            },
            {
              "actionType": "wait",
              "params": {
                "milliseconds": 2000
              }
            }
          ]
        }
      ]
    },
    {
      "flowName": "NavigateToJLGFlow",
      "description": "Navigate to JLG section",
      "steps": [
        {
          "stepName": "navigateToJLG",
          "enabled": true,
          "actionSteps": [
            {
              "actionType": "waitForVisible",
              "locatorCategory": "home",
              "locatorName": "jlgText",
              "params": {
                "milliseconds": 20000
              }
            },
            {
              "actionType": "click",
              "locatorCategory": "home",
              "locatorName": "jlgText"
            },
            {
              "actionType": "wait",
              "params": {
                "milliseconds": 1500
              }
            }
          ]
        }
      ]
    },
    {
      "flowName": "CustomerOnboardingFlow",
      "description": "Complete customer onboarding with voter ID",
      "steps": [
        {
          "stepName": "openCustomerDetails",
          "enabled": true,
          "actionSteps": [
            {
              "actionType": "waitForVisible",
              "locatorCategory": "onboarding",
              "locatorName": "customerDetailsText",
              "params": {
                "milliseconds": 10000
              }
            },
            {
              "actionType": "click",
              "locatorCategory": "onboarding",
              "locatorName": "customerDetailsText"
            }
          ]
        }
      ]
    }
  ],
  "suiteExecutions": [
    {
      "suiteName": "FullOnboardingFlow_User1",
      "enabled": true,
      "description": "Complete onboarding flow with default user data",
      "dataSetRef": "DefaultUserData",
      "flowRefs": [
        "LoginFlow",
        "NavigateToJLGFlow",
        "CustomerOnboardingFlow"
      ],
      "resetAfter": true
    },
    {
      "suiteName": "FullOnboardingFlow_User2",
      "enabled": true,
      "description": "Complete onboarding flow with alternate user data",
      "dataSetRef": "AlternateUserData",
      "flowRefs": [
        "LoginFlow",
        "NavigateToJLGFlow",
        "CustomerOnboardingFlow"
      ],
      "resetAfter": true
    },
    {
      "suiteName": "LoginOnly_Test",
      "enabled": false,
      "description": "Test login functionality only",
      "dataSetRef": "DefaultUserData",
      "flowRefs": [
        "LoginFlow"
      ],
      "resetAfter": false
    }
  ],
